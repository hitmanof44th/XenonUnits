<Window x:Class="XenonUnits.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XenonUnits"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    
    <Canvas x:Name="gaugeCanvas">

        <Ellipse x:Name="background2"  Width="300" Height="300" Stroke="red" StrokeThickness="18">

        </Ellipse>
        <Ellipse x:Name="background" Width="300" Height="300" Stroke="Gray" StrokeThickness="8">
            <Ellipse.StrokeDashArray>
                <DoubleCollection>8 6</DoubleCollection>
            </Ellipse.StrokeDashArray>
        </Ellipse>


        <Line x:Name="needle" Stroke="Red" StrokeThickness="8"/>
        <TextBlock x:Name="unitTextBlock" Text="RPM" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
        <TextBlock x:Name="minValueTextBlock" Text="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
        <TextBlock x:Name="maxValueTextBlock" Text="8000" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
    </Canvas>
    
</Window>
